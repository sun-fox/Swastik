<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/icon" href="../../../public/images/logo.png" />
    <link rel ="stylesheet" href ="../../../public/stylesheets/custom.css">
    <link rel ="stylesheet" href ="../../../public/stylesheets/bootstrap.min.css">
    <script src ="../../../public/javascripts/bootstrap.min.js" type ="text/javascript"></script>
    <script src ="../../../public/javascripts/jquery.js" type ="text/javascript"></script>
    <title>Swastik|Child</title>
</head>

<body>
    <div class ="container-fluid top-strip">
        <div class ="row text-center">
            <div class ="col-md-4 col-xs-12"><img src ="../../../public/images/logo.png" class ="img-responsive"><h5 id ="slogan">A Step Closer To Healthy India</h5></div>
            <div class ="col-md-4 col-xs-12"><img src ="../../../public/images/satyamev.svg" class ="img-responsive">
                <h5 id ="header-title">Ministry of Women and Child Development
                    Government of India
                    </h5></div>
            <div class ="col-md-4 col-xs-12"><img src ="../../../public/images/Towards a new dawn_Logo.png" class ="img-responsive"></div>
        </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light container-fluid">
            <a class="navbar-brand" href="#">Swastik</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Register Parents</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Register Child</a>
                  </li>
            </div>
          </nav><br>


            <div class= "row">
                <div class ="col-12 text-center">
                    <h2>Children Details</h2>
                </div>
            </div><% var i=0; %>
            <div class ="row">
                <div class ="col-12">
                    <% Child.forEach(function(children){ i++;%> 
                        <form class ="card container-fluid" action ="/Client/children/<%=children._id %>/update?_method=PUT" method ="POST">
                            <div class ="row">
                                <div class ="col-md-3 col-xs-12">
                                    <img src ="<%=children.image%>" width="300"height="300" class ="child_img">
                                </div>
                                <div class ="col-md-9 col-xs-12">
                                    <table class ="children-table">
                                        <tr>
                                            <th>Name :</th>
                                            <td><input type ="text" name ="cname"value ="<%=children.name%>" disabled></td>
                                        </tr>
                                        <tr>
                                            <th>Father's Mobile No. :</th>
                                            <td><input type ="text" name ="fmobno"value ="<%=children.Fphoneno%>" disabled></td>
                                        </tr>
                                        <tr>
                                            <th>Mother's Mobile No. :</th>
                                            <td><input type ="text" name ="mmobno" value ="<%=children.Mphoneno%>" disabled></td>
                                        </tr>
                                        <tr>
                                            <th>Gender :</th>
                                            <td><input type ="text"name ="cgen" value ="<%=children.gender%>" disabled></td>
                                        </tr>
                                        <tr>
                                            <th>Date Of Birth :</th>
                                            <td><input type ="text" name ="cdob" value ="<%=children.DOB%>" disabled></td>
                                        </tr>
                                        <tr>
                                            <th>Siblings :</th>
                                            <td><input type ="text"name ="csib" value ="<%=children.siblings%>" disabled></td>
                                        </tr>
                                        <tr>
                                            <th>Vaccinations:</th>
                                            <%children.vaccinations.forEach((vaccine)=>{%>
                                             <td><input type ="text" name ="cvacc"value="<%= vaccine.disease %>" disabled></td>
                                            <%})%>
                                          </tr>
                                          <tr>
                                            <th></th>
                                            <%children.vaccinations.forEach((vaccine)=>{%>
                                             <td><input type ="text" name ="cduedate"value="<%= vaccine.duedate %>" disabled></td>
                                            <%})%>
                                          </tr>
                                          <tr>
                                            <th>New Vaccination :</th>
                                            <td><input type= "text" name ="new_vacc" required></td>
                                          </tr>
                                          <tr>
                                            <th></th>
                                            <td><input type= "date" name ="new_vacc_date" required></td>
                                          </tr>
                                          <tr>
                                              <td col-span-4><button type ="submit" name ="submit" class ="btn btn-primary">Update</button></td>
                                          </tr>
                                    </table>
                                </div>
                            </div>
                        </form><br>
                        <%})%>
                </div>
            </div>







          </body>
          </html>