                        "<%=gdata.HepatitisA%>",
                        "<%=gdata.HepatitisB%>",
                        "<%=gdata.ChickenPox%>",
                        "<%=gdata.DTaP%>",
                        "<%=gdata.Hib%>",
                        "<%=gdata.Influenza%>",
                        "<%=gdata.MMR%>",
                        "<%=gdata.Meningococcal%>",
                        "<%=gdata.Pneumococcal%>",
                        "<%=gdata.Rotavirus%>",
                    ],
